# a destination device must be set
DEV=${MULTIBOOT_DEV:-} # destination device
FORCE=${MULTIBOOT_FORCE:-0} # set FORCE=1: no safety check before formatting


# boot partition
# PARTSIZE may be 'max' to use the rest of the device
#   (unless dd_method shall be used)
# if GRUB_PARTITION = 2, the first partition will be a data partition
GRUB_PARTITION=${MULTIBOOT_GRUB_PARTITION:-2}  # must be 1 or 2
GRUB_PARTSIZE=${MULTIBOOT_GRUB_PARTSIZE:-512M}
GRUB_LABEL=${MULTIBOOT_GRUB_LABEL:-boot}
GRUB_FS=${MULTIBOOT_GRUB_FS:-ext2}  # FAT is not supported
GRUBDEV="${DEV}$GRUB_PARTITION"  # do not change this line!

# data partition
# only used if GRUB_PARTITION=2
DATA_PARTSIZE=${MULTIBOOT_DATA_PARTSIZE:-512M} # size of first partition, can be M or G
DATA_LABEL=${MULTIBOOT_DATA_LABEL:-USB}
DATA_FS=${MULTIBOOT_DATA_FS:-vfat} # file system, mkfs.$FS must exist!



# config on stick
ISODIR='/boot/iso' # store isos here
EXTRACTED_ISODIR='/boot/extracted' # store extracted isos here
INCLUDEDIR="/boot/syslinux/config"
menufilename_load="load_isos.cfg"
menufilename_extract="extracted_images.cfg"
menufilename_chain="chain_images.cfg"

# local config
# configure the names of the directories to put iso images
dd_isodir=isos # images used by *dd method*
memdisk_isodir=memdisk_isos # images used by *memdisk method*
extracted_isodir=extracted_isos # images used by *extracting method*

# configure partition to install syslinux to
MOUNTPOINT=/mnt
iso_mountpoint=/tmp/iso
